[alias]
	pr = pull --rebase
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	pushf = push --force-with-lease
	f = fetch
        p = pull --rebase

[core]
	excludesfile = ~/.gitexclude
	editor = emacs -nw
	pager = less

[pull]
	rebase = true
	
[push]
	default = current
	recurseSubmodules = on-demand

[include]
	path = ~/.gitconfig-local
	