[alias]
	pr = pull --rebase
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	pushf = push --force-with-lease
	f = fetch
	p = !git pull --rebase && git submodule update --recursive --init

[core]
	excludesfile = ~/.gitexclude
	editor = emacs -nw
	pager = less

[pull]
	rebase = true
	recurseSubmodules = on-demand
[push]
	default = current
	recurseSubmodules = on-demand

[include]
	path = ~/.gitconfig-local
	
[color]
	ui = auto
[diff]
	mnemonicprefix = true
[branch]
	autosetupmerge = true
