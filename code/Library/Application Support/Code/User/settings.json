{
    "editor.formatOnSave": true,
    "workbench.colorTheme": "An Old Hope",
    "projectManager.git.maxDepthRecursion": 3,
    "projectManager.git.baseFolders": [
        "$home/projects/"
    ],
    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },
    "terraform.languageServer": {
        "enabled": true,
        "args": []
    }
}